    <title>@ViewBag.Title</title>

</head>

<body>
    <div>
        
        <div id="wrapper">

            <aside id="sidebar-wrapper">
                <div class="sidebar-brand">
                    <h2 style="color:#000">Logo   <a href="#" class="navbar-brand" id="sidebar-toggle-sm"><i class="fa-solid fa-x"></i></a></h2>

                    <h4>Rahul</h4>
                    <h6>Owner</h6>
                    <hr />
                  
                      
                   
                </div>
                <ul class="sidebar-nav">
                    <li class="active">
                        <a href="../"><i class="fa fa-home"></i>Dashboard</a>
                    </li>
                    <li>
                        <a href="/HotelDashboard/HotelHome/GuestDetails"><i class="fa fa-solid fa-person-walking-luggage"></i>Guest Details</a>
                        @* <a href="../"><i class="fa fa-solid fa-person-walking-luggage"></i>Guest Details</a> *@
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-file-text"></i>Report</a>
                    </li>
                </ul>
            </aside>

            <div id="navbar-wrapper" class="nav-bg">
                <nav class="navbar navbar-inverse nav-bg">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a href="#" class="navbar-brand" id="sidebar-toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <div style="float:right;padding-top:8px;padding-right:40px"> 
                            <span style="color:#fff;font-size:16px;margin-right:35px;" id="hsessionusername">
                                @if (ViewBag.hotelname != null)
                                {
                                    @ViewBag.hotelname
                                }
                                else
                                {
                                    
                                }
                            </span>

                            <span onclick="logout()"><i class="fa-solid fa-right-from-bracket" style="color:#fff"></i></span>
                        </div>
                    </div>

                   
                </nav>
            </div>

            <section id="content-wrapper">
               
              
                @RenderBody()
            </section>

        </div>
        
    </div>
    <script>
        const $button = document.querySelector('#sidebar-toggle');
        const $wrapper = document.querySelector('#wrapper');
        const $buttonSm = document.querySelector('#sidebar-toggle-sm');
        $button.addEventListener('click', (e) => {
            e.preventDefault();
            $wrapper.classList.toggle('toggled');
        });

        $buttonSm.addEventListener('click', (e) => {
            e.preventDefault();
            $wrapper.classList.toggle('toggled');
        });


        function logout() {
            debugger;
            
            $.ajax({
                type: "post",
                url: "../../Account/HotelLogout",
                datatype: "json",
                traditional: true,
                success: function (data) {
                    console.log(data);
                    window.location.href = '../../Account/HotelLogin';
               
                }
            });
        }
    </script>
