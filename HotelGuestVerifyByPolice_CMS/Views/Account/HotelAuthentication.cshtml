<style>
    body {
        background-image: linear-gradient( 15deg, hsl(255deg 86% 72%) 0%, hsl(249deg 89% 74%) 26%, hsl(242deg 92% 75%) 39%, hsl(236deg 94% 75%) 48%, hsl(230deg 95% 74%) 55%, hsl(226deg 95% 74%) 61%, hsl(223deg 95% 73%) 68%, hsl(220deg 93% 73%) 75%, hsl(217deg 91% 72%) 82%, hsl(215deg 89% 72%) 91%, hsl(213deg 86% 72%) 100% ) !important;
    }

    wordtune-read-extension {
        display: none !important
    }

    .login_form {
        background: #fff;
        width: 45%;
        border-radius: 20px;
        padding: 20px;
        padding-right: 25px;
        padding-bottom: 25px;
        box-shadow: 1px 1px 12px 4px rgb(0 0 0 / 31%);
    }

    .form-control {
        border: none !important;
        border-bottom: 1px solid #787878 !important;
        border-radius: 0px !important;
        /*  color: #9979f6 !important; */
        margin-right: 5% !important;
        margin-bottom: 20px;
    }

        .form-control:focus {
            color: #212529;
            background-color: #fff !important;
            border-color: none;
            outline: 0;
            box-shadow: none !important;
            border-bottom: 2px solid #9979f6 !important;
        }

    .login_img {
        position: absolute;
        top: 11%;
        right: 20%;
    }

    .container {
        display: flex;
        justify-content: center;
       
    }
</style>
<div class=" bg-gradient">
    <p class="text-right py-3" style="padding-right:10%;font-size:20px;color:#fff;font-weight:600">  <a href="../Home/index" style="color:#fff">Home</a></p>
    <div class="container" style="padding-top: 4%;padding-bottom:5%">
        
      
            <div class="login_form">
            <h2 style="color:#894ff9;margin-bottom:20px;font-weight:600;text-align:center">
                HI!
            </h2>
            <h5 style="color:#000;margin-bottom:20px;font-weight:400;text-align:center">
                Authentication pin is required for Create account

            </h5>
                <div>
                <input id="auth_pin" class="form-control text-center" placeholder="Authentication Pin" required />
                <p class="text-center"> Please enter your 10 digit code</p>
                </div>
              

                <div class="text-center" style="margin-top:25px">
                <button onclick="authpinSubmit()" class="btn btn-primary mb-3" style="font-weight:700;background:#894ff9;border-color:#894ff9;padding:5px 30px;font-size:16px;border-radius:25px;">Verify</button>
                <p id="autherror" style="color:red"></p>
                <p id="authmsg"></p>
                </div>

                
            </div>

        

    </div>
</div>



<script>

    function authpinSubmit() {
        debugger;
        if ($("#auth_pin").val() == null || $("#auth_pin").val() == "") {
            $("#autherror").show();
            $("#authmsg").hide();
            $("#autherror").text("Please Enter Authentication Pin.");
        }
        else {
            $.ajax({
                type: "post",
                url: "/Account/CheckHotelAuthentication",
                data: { auth_Pin: $("#auth_pin").val() },
                datatype: "json",
                traditional: true,
                success: function (data) {
                    json = JSON.parse(data);
                    console.log(json.message);
                    let button = document.getElementById("authmsg");
                    button.style.display = "block";
                    if (json.status == "success") {
                        $("#autherror").hide();
                        $("#authmsg").hide();
                        window.location = "/Account/HotelRegistration";
                    } else {
                        button.style.color = "red";
                        
                        $("#autherror").hide();
                        $("#authmsg").text(json.message);
                        //window.location = "/Account/HotelAuthentication";
                    }
                   
                },
            });
        }
  
    }
</script>
